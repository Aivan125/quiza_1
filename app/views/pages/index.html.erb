<br />

<div class="row col-10 offset-1 ">
  <div class="col-sm-6">
    <div class="sports_header text-center">
      <h1>-My favorite sports-</h1>
    </div>
    <br />
    <br />

    <% @sports.each do |sport| %>  
      <div class="sports">
        <div class="text-center">
          <%= sport.name %>
        </div>
      </div>  
    <% end %>
  </div>



  <div class="col-sm-6">
    <div class="music_header text-center">
      <h1>-My favorite music groups-</h1>
    </div>  
    <br />
    <br />

    <% @music.each do |music| %>  
      <div class="music">
        <div class="text-center">
          <%= music.group %>
        </div>
      </div> 
    <% end %>
  </div>
</div>


